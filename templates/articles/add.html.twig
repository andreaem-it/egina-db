{% extends 'base.html.twig' %}

{% block title %}EGInA - Database dotazioni{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3">
            <div class="col-12">
                <h3>{{ page_title }}</h3>
            </div>
        </div>
        <div class="row mt-3">
            {{ form_start(form) }}
            <div class="col-12">
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.codice) }}
                        {{ form_widget(form.codice) }}
                    </div>
                    <div class="col-6">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="col-3">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type) }}
                        {{ form_help(form.type) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{ form_label(form.dotazioni) }}
                        {{ form_widget(form.dotazioni ) }}
                    </div>
                    <div class="col-6">
                        {{ form_label(form.danni) }}
                        {{ form_widget(form.danni ) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ form_label(form.descrizione) }}
                        {{ form_widget(form.descrizione ) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 float-right">
                        {{ form_widget(form.submit) }}
                        {{ form_widget(form.reset) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
