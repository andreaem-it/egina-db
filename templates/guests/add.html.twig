{% extends 'base.html.twig' %}

{% block title %}EGInA - Database dotazioni{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3">
            <div class="col-12">
                <h3>Aggiungi Articolo</h3>
            </div>
        </div>
        <div class="row mt-3">
            {{ form_start(form) }}
            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="col-6">
                        {{ form_label(form.location) }}
                        {{ form_widget(form.location) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                    </div>
                    <div class="col-3">
                        {{ form_widget(form.submit) }}
                    </div>
                    <div class="col-3">
                        {{ form_widget(form.reset) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
