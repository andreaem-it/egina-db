{% extends 'base.html.twig' %}

{% block title %}EGInA - Database dotazioni{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3">
            <div class="col-11">
                <h3>Lista Clienti</h3>
            </div>
            <div class="col-1">
                <a href="{{ url('nuovo_cliente') }}" class="btn btn-success float-right btn-block"><i class="fa fa-plus"></i></a>
            </div>
        </div>
        <div class="row mt-3">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Luogo</th>
                    <th scope="col">Opzioni</th>
                </tr>
                </thead>
                <tbody>
                {% for item in pagination %}
                    <tr>
                        <td>{{ item.id }}</td>
                        <td>{{ item.name }}</td>
                        <td>{{ item.type }}</td>
                        <td>{{ item.location }}</td>
                        <td width="150">
                            <a href="{{ url('mostra_cliente', {'id' : item.id}) }}" class="btn btn-sm btn-success"><i class="fa fa-eye"></i></a>
                            <a href="" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                            <a href="" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>

{% endblock %}