{% extends 'base.html.twig' %}

{% block title %}EGInA - Database dotazioni{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3">
            <div class="col-10">
                <h3>{{ u.name }}</h3>
            </div>
            <div class="col-2">
                <a href="{{ url('nuovo_cliente') }}" class="btn btn-warning float-right btn-block">Modifica</a>
            </div>
        </div>
        <div class="card mt-2">
            <div class="card-body">
                <div class="card-title">
                    <h5>Dati Persona</h5>
                </div>
                <div class="row">
                    <div class="col-2">
                        <p>Nome</p>
                        <p>Luogo</p>
                    </div>
                    <div class="col-9">
                        <p>{{ u.name }}</p>
                        <p>{{ u.location }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-10">
                <h5>Articoli in Possesso</h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Data ultimo movimento</th>
                        <th scope="col">Luogo</th>
                        <th scope="col">Motivo</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for line in pagination %}
                        <tr>
                            <td>{{ line.id }}</td>
                            <td><a href="{{ url('scheda_articolo', {'id': line.id}) }}">{{ line.name }}</a></td>
                            <td>{{ line.lastmovement|date("d-m-Y h:i") }}</td>
                            <td>{{ line.location }}</td>
                            <td>{{ line.motivation }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
