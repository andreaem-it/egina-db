{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="container">
    <div class="row mt-3">
        <div class="col-12">
            <h3>Impostazioni > Utenti</h3>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <a href="{{ url('impostazioni_generali') }}" class="btn btn-secondary">Impostazioni Generali</a>
            <a href="{{ url('impostazioni_utenti') }}" class="btn btn-secondary">Impostazioni Utenti</a>
        </div>
    </div>
    <div class="row mt-3">
        <table class="table table-striped table-hover">
            <thead>
                <th scope="row">
                    ID
                </th>
                <th scope="row">
                    Username
                </th>
                <th scope="row">
                    Role
                </th>
                <th scope="row" style="width: 150px;">
                    <a href="{{ url('impostazioni_utenti_add') }}" class="btn btn-success btn-sm float-right"><i class="fa fa-plus-square"></i> Add User</a>
                </th>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="col">
                            {{ user.id }}
                        </th>
                        <td>
                            {{ user.username }}
                        </td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}
                            {% endfor %}
                        </td>
                        <td>
                            <a href="" class="btn btn-success btn-sm">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="{{ url('impostazioni_utenti_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
    <style>
        .table th {
            border-top: none!important;
        }
    </style>
{% endblock %}
